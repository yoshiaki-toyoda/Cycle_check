<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InputActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#696969"
            android:text="タイトル"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="タイトル" />

        <TextView
            android:id="@+id/riding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#696969"
            android:text="ライディング内容"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    <EditText
        android:id="@+id/content_edit_text"
        android:layout_width="374dp"
        android:layout_height="112dp"
        android:layout_below="@id/title_edit_text"
        android:hint="内容" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/distance_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:text="走行距離：" />

            <EditText
                android:id="@+id/dis_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:inputType="number"
                android:hint="走行距離(km)" />

            <TextView
                android:id="@+id/km_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:text="Km" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:text="走行日：" />

        <Button
            android:id="@+id/date_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@id/content_edit_text"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/times_button"
            android:text="----/--/--" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:text="走行時間：" />

        <Button
        android:id="@id/times_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="1"
        android:layout_below="@id/content_edit_text"
        android:layout_alignParentRight="true"
        android:text="--:--"
        style="@style/Widget.AppCompat.Button.Borderless" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cyclename_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:text="自転車名：" />

            <TextView
                android:id="@+id/cycle_nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@id/content_edit_text"
                android:layout_alignParentRight="true"
                android:hint="自転車名" />
        </LinearLayout>


        <Button
            android:id="@+id/done_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="60dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_corners"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:text="走行記録確定" />

        <Button
            android:id="@+id/button"
            android:text="Gps測定"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="60dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_corners"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
