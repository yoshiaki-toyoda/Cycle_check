<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/Titile_ditail1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="レポートタイトル"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Titile_ditail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/quest_ditail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:text="写真"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:layout_margin="10dp"
                app:srcCompat="@android:color/darker_gray" />

            <TextView
                android:id="@+id/personal_ditail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:text="質問者情報"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="4"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="ユーザー名"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/area1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="地域"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cycle1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="自転車名"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/shop1Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="登録店"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dis1Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="走行距離"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dayText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="レポート作成日"
                        android:textSize="16sp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="ユーザー名"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/area_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="地域"
                    android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cycle_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="自転車名"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/shopText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="登録店"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/disText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="走行距離"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dayeditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="レポート作成日"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/reportcontents"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="相談タイプ"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Report_typetext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/report_partcontents"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="相談部位"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/part_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/problem_content"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="相談内容"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/problem_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|left"
                android:hint=""
                android:textSize="16sp" />


            <TextView
                android:id="@+id/reportAnser"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="希望回答タイプ"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reportAnsertext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/type_otheretext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="top|left"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yosantext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="解決希望予算※部品交換時"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yosan_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yosantext2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="中古部品"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/oldpart_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/comtext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="相談者コメント"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/com_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:textSize="16sp" />

            <Button
                android:id="@+id/part_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button_corners"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:text="構成部品確認" />

        </LinearLayout>




    </ScrollView>
</androidx.core.widget.NestedScrollView>