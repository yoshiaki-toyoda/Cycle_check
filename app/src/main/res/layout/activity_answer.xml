<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary" />


                <TextView
                    android:id="@+id/Titile_ditail1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="レポートタイトル"
                    android:background="#696969"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Titile_ditail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp" />

            <TextView
                android:id="@+id/quest_ditail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:text="写真"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                app:srcCompat="@android:color/darker_gray" />

            <TextView
                android:id="@+id/personal_ditail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:text="質問者情報"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="4"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="ユーザー名"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/area1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="地域"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cycle1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="自転車名"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/shop1Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="登録店"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dis1Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="走行距離"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/dayText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="レポート作成日"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="ユーザー名"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/area_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="地域"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cycle_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="自転車名"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/shopText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="登録店"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/disText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="走行距離"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dayText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="レポート作成日"
                        android:gravity="center_horizontal"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/reportcontents"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="相談タイプ"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Report_typetext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/part_name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/problem_content"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#696969"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="相談内容"
                    android:textSize="16sp" />



                    <TextView
                        android:id="@+id/problem_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="top|left"
                        android:hint=""
                        android:textSize="16sp" />


            <TextView
                android:id="@+id/reportAnser"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="希望回答タイプ"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reportAnsertext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/type_otheretext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:gravity="top|left"
                    android:textSize="16sp" />

            <TextView
                android:id="@+id/yosantext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="解決希望予算※部品交換時"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yosan_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/oldpart_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/comtext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="相談者コメント"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/com_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answercontent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="回答"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/image5Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="登録画像(クリックで変更)"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_weight="2"
                        android:scaleType="fitCenter"
                        app:srcCompat="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/answer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="#696969"
                        android:layout_marginTop="5dp"
                        android:text="回答者名"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/answer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/answerarea"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="#696969"
                        android:layout_marginTop="5dp"
                        android:text="回答者地域"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/answerarea_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/answerresult"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="結論"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_resultedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="解決方法を入力"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answeryosan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="[見積費用]"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_yosanedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="見積金額を入力"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_reason"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="原因・理由"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_reasonedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="結論に至った不具合原因・理由を入力"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_comtext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="コメント"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_comeditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="コメント入力"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_answertext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="[連絡先]"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_answereditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="修理依頼/部品購入時に連絡する方法を入力\n(不要の場合は未記入)"
                android:textSize="16sp" />

            <Button
                android:id="@+id/answer_bottun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="回答登録">

            </Button>
        </LinearLayout>




    </ScrollView>
</androidx.core.widget.NestedScrollView>