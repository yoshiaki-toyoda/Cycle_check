<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/answercontent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="回答"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/image5Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="登録画像(クリックで変更)"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_weight="2"
                        android:scaleType="fitCenter"
                        app:srcCompat="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/answer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="#696969"
                        android:layout_marginTop="5dp"
                        android:text="回答者名"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/answer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/answerarea"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="#696969"
                        android:layout_marginTop="5dp"
                        android:text="回答者地域"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/answerarea_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/answerresult"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="結論"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_resultedit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="解決方法を入力"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answeryosan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="[見積費用]"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_yosanedit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="見積金額を入力"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_reason"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="原因・理由"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_reasonedit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="結論に至った不具合原因・理由を入力"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_comtext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="コメント"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/answer_comeditText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="コメント入力"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_answertext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#696969"
                android:gravity="center_vertical"
                android:text="[連絡先]"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/contact_editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="修理依頼/部品購入時に連絡する方法を入力\n(不要の場合は未記入)"
                android:textSize="16sp" />

            <Button
                android:id="@+id/answer_bottun2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button_corners"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:text="回答登録">
            </Button>

            <Button
                android:id="@+id/shop_bottun2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button_corners"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:text="店舗情報確認">
            </Button>
        </LinearLayout>




    </ScrollView>
</androidx.core.widget.NestedScrollView>