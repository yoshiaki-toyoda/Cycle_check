<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CycleresisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/picTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView2"
            android:text="灰色部を押して画像を登録"
            android:gravity="bottom"
            android:layout_weight="2"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:scaleType="fitCenter"
            app:srcCompat="@android:color/darker_gray"
            android:layout_weight="2"/>

        <EditText
            android:id="@+id/resisternameText"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="ロードバイク名を入力"
            android:layout_weight="2"/>

        <EditText
            android:id="@+id/resistershopText"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="店舗番号を入力"
            android:layout_weight="2"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <Button
            android:id="@+id/cycleresisterbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="新奇登録" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>