<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CycleresisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="ロードバイク登録" />

        <TextView
            android:id="@+id/picTextview"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_above="@+id/imageButton"
            android:text="灰色部を押して画像を登録"
            android:layout_weight="1"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:scaleType="fitCenter"
            app:srcCompat="@android:color/darker_gray"
            android:layout_weight="2"/>

        <EditText
            android:id="@+id/resisternameText"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="ロードバイク名を入力"
            android:layout_weight="2"/>

        <EditText
            android:id="@+id/resistershopText"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="店舗番号を入力"
            android:layout_weight="2"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <Button
            android:id="@+id/cycleresisterbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="ロードバイク登録" />

        <Button
            android:id="@+id/partresisterbutton2"
            android:layout_width="421dp"
            android:layout_height="63dp"
            android:layout_weight="2"
            android:text="詳細部品登録" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>